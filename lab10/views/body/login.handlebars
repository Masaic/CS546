<main>
    <div class="row">
        <div class="col-sm-12">
            <h1>Login System</h1>
            <form action="/login" id="static-form" method="post">
                <div class="form-group">
                    <label>
                        Username
                        <input type="text" id="username" name="username" placeholder="Username" class="full-width-input" />
                    </label>
                </div>

                <div class="form-group">
                    <label>
                        Password
                        <input type="text" id="password" name="password" placeholder="Password" class="full-width-input" />
                    </label>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-default">Submit</button>
                </div>

                <div class="form-group">
                    <button type="reset" class="btn btn-default">Claer</button>
                </div>
            </form>
        </div>
    </div>
</main>